{
  "name": "vel-pdf-desktop",
  "version": "1.0.0",
  "description": "Vel PDF Converter - Desktop Application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "bundle-backend": "node scripts/bundle-backend.js",
    "bundle-frontend": "node scripts/bundle-frontend.js",
    "build-all": "npm run bundle-backend && npm run bundle-frontend && npm run dist:win",
    "icon-help": "node scripts/generate-icons.js"
  },
  "keywords": [
    "pdf",
    "converter",
    "electron"
  ],
  "author": "Val Associates",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "find-free-port": "^2.0.0",
    "tree-kill": "^1.2.2"
  },
  "build": {
    "appId": "com.valassociates.velpdf",
    "productName": "Vel PDF Converter",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "resources/**/*",
      "!resources/backend-src",
      "!resources/frontend-src"
    ],
    "extraResources": [
      {
        "from": "resources/backend",
        "to": "backend",
        "filter": ["**/*"]
      },
      {
        "from": "resources/frontend",
        "to": "frontend",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Vel PDF Converter"
    },
    "portable": {
      "artifactName": "VelPDFConverter-Portable.exe"
    }
  }
}
